{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Facts Contract",
  "type": "object",
  "required": [
    "timestamp",
    "cpu",
    "memory",
    "disk",
    "load"
  ],
  "properties": {
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp"
    },
    "cpu": {
      "type": "object",
      "required": ["usage_percent", "cores"],
      "properties": {
        "usage_percent": { "type": "number" },
        "cores": { "type": "integer" }
      }
    },
    "memory": {
      "type": "object",
      "required": ["used_mb", "total_mb"],
      "properties": {
        "used_mb": { "type": "number" },
        "total_mb": { "type": "number" }
      }
    },
    "disk": {
      "type": "object",
      "required": ["used_percent"],
      "properties": {
        "used_percent": { "type": "number" }
      }
    },
    "load": {
      "type": "array",
      "items": { "type": "number" },
      "minItems": 3,
      "maxItems": 3
    }
  }
}
